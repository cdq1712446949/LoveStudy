<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants">

    <TextView
        android:id="@+id/docunment_name"
        android:layout_width="264dp"
        android:layout_height="33dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="14dp"
        android:background="@color/white"
        android:text="TextView"
        android:textSize="15sp" />


    <ImageButton
        android:id="@+id/document_up"
        android:layout_width="69dp"
        android:layout_height="34dp"
        android:layout_below="@+id/docunment_name"
        android:layout_toEndOf="@+id/docunment_name"
        android:src="@drawable/zan_no"
        android:background="@drawable/sing_button_home"
        android:focusable="false"/>

    <TextView
        android:id="@+id/document_author"
        android:layout_width="269dp"
        android:layout_height="31dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/docunment_name"
        android:layout_marginStart="14dp"
        android:background="@color/white"
        android:text="TextView" />

    <TextView
        android:id="@+id/document_date"
        android:layout_width="130dp"
        android:layout_height="32dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="1dp"
        android:layout_toEndOf="@+id/docunment_name"
        android:background="@color/white"
        android:text="TextView" />

    <TextView
        android:id="@+id/text_up"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_below="@+id/docunment_name"
        android:layout_toEndOf="@+id/document_up"
        android:gravity="center"
        android:text="TextView" />


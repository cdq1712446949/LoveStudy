<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ForgetNewActivity"
    android:orientation="vertical"
   >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/title_blue">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/title_forget_text"
            android:textColor="@color/dark"
            android:textSize="30sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:orientation="vertical">

        <EditText
            android:id="@+id/forgetnew_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPassword"
            android:hint="输入新密码"
            android:gravity="center_horizontal"
            android:theme="@style/MyEditText"/>

        <EditText
            android:id="@+id/forgetnew_passwordtwo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPassword"
            android:hint="再次输入新密码"
            android:gravity="center_horizontal"
            android:theme="@style/MyEditText"/>

        <Button
            android:layout_gravity="center_horizontal"
            android:id="@+id/forgetnew_sure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_sure"
            android:background="@drawable/sign_button"/>

    </LinearLayout>

</LinearLayout>